<style>
    #butt {
        margin: 0;
        float: right;
    }
</style>
{{#if errors}}
{{#each errors}}
    <div class="alert alert-danger">
  <strong>{{msg}}</strong>
    </div>
{{/each}}
{{/if}}
<div class="container" style="margin-top: 10px; clear: both;">    
    <form action="/secret/{{ url }}/save" method="post">
        <div class="form-group">
            <label for="text">Your Secret Text</label>
            <textarea class="form-control" name="text" rows="3">{{ payload.text }}</textarea>
        </div>
        <div class="form-group" id="butt">
            <input type="submit" class="btn btn-primary" value="Save">
        </div>
    </form>
</div>